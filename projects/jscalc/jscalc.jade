
doctype html
html(lang='en')
  head
    title JavaScript Calculator
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='Wikipedia Viewer')
    meta(name='robots', contet='index,follow')
    meta(name='author', content='George Crisan at georgerdp@gmail.com')
    link(rel='shortcut icon', href='#/favico.ico')
    link(href='jscalc.css', rel='stylesheet')


  body
    #main-wrapper
      .calculator
        #display-console
          .display 
            | 01
          .history 
            | 0 432

        #key-pad 
          button.butn(key-val="ac") AC
          button.butn(key-val="back") &DoubleLeftArrow; 
          button.butn(key-val="-/+") -/+
          button.butn(key-val="/") &divide;
          button.butn(key-val="1") 1
          button.butn(key-val="2") 2  
          button.butn(key-val="3") 3
          button.butn(key-val="*")  *  
          button.butn(key-val="4")  4
          button.butn(key-val="5")  5
          button.butn(key-val="6")  6
          button.butn(key-val="-")  -
          button.butn(key-val="7")  7
          button.butn(key-val="8")  8
          button.butn(key-val="9")  9
          button.butn(key-val="+")  +
          button.butn(key-val="0")  0
          button.butn(key-val=".") .  
          button.butn(key-val="=")  = 

