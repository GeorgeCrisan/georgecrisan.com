  body
    // background
    .bg 
    
    .mainWrapper
      h3
        | Loading Info ...  
        i.fa.fa-times.fa-spin
      //header
      header.header
        h2#location  
          | City, Country
        h3#latAndLong 
          | Lat: xx.xxxx , Lon: -xx.xxxx
        h4#date
          | Weekday, Month XX XXXX  


      //artile contain icon and Info
      article.main 
        i#conditionIcon.wi.wi-na 
        p#condition 
          | Condition is loading ...
      //aside for the extra info
      aside.aside.aside-1   
        span#temp XX&deg;F 
        button
          | Show in:  &nbsp; &deg; 
          span C&nbsp;&nbsp;     
      aside.containerFXI

        .span
          i.icon.wi.wi-barometer

          p Pressure: 

          span#pressure
            p XXXX&nbsp;&nbsp;hPa

        .span
          i.icon.wi.wi-humidity
          p Humidity: 

          span#humidity
            p XX&nbsp;&nbsp;%

        .span
          i.icon.wi.wi-strong-wind
          p Wind:
          span#wind
            p X.X &nbsp;&nbsp;km/h
            


        



