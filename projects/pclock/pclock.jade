    link(rel='shortcut icon', href='#/favico.ico')
    link(href='../../css/bootstrap.min.css', rel='stylesheet')
    link(href="pclock.css" rel="stylesheet")

  body
    .main-wrapper
      h1 Pomodoro Clock
      .pclock
        #buttons
          button.standard#start(data="sesiune") Start
          button.standard#stop(data="sesiune") Pause
          button.standard#reset(data="sesiune") Reset
          button.standard#start-break(data="break") Start
          button.standard#stop-break(data="break") Pause
          button.standard#reset-break(data="break") Reset

        #timers-container 
          .break-ct
            h3 Break
            button.set-break-minus -
            span.set-break-minutes 
            button.set-break-plus +
          .set-timer-ct
            h3 Session
            button.set-timer-minus -
            span.set-timer-minutes 
            button.set-timer-plus +

        

        #display
          p Status: 
            span#status Sesion/Brake
          p.time-elapsing  

       



    
